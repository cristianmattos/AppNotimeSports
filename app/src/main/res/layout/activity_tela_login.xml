<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityTelaLogin">



    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="601dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/ic_logo_notime_red_foreground" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="309dp"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/cinza"
                android:ems="10"
                android:hint="  Digite seu email"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editTextSenha"
                android:layout_width="309dp"
                android:layout_height="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/cinza"
                android:ems="10"
                android:hint="  Digite sua senha"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/textCriarCadastro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginBottom="10dp"
                android:text="Criar um cadastro"
                android:textColor="#c2273e"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnEntrar"
                android:layout_width="309dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="130dp"
                android:background="@drawable/vermelho"
                android:text="Entrar"
                android:textColor="#ffff" />


            <TextView
                android:id="@+id/textAjuda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:text="Precisa de alguma ajuda?"
                android:textColor="#c2273e"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>